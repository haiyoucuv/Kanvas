{
  "compilerOptions": {
    // "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "noImplicitAny": false,
    "sourceMap": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "moduleResolution": "Node",
//    "noEmitOnError": true,
    "lib": [
      "es5",
      "es2015.promise",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./types",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "test",
  ],
  "include": [
    "src",
    "types",
  ]
}
